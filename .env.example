# SECCO Tap Game Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
WEB_APP_URL=https://dmitrycoinsec.github.io/secco-tap-game/

# TON Connect Configuration (optional)
TON_CONNECT_MANIFEST_URL=https://dmitrycoinsec.github.io/secco-tap-game/tonconnect-manifest.json

# Security Settings
SECRET_KEY=your_secret_key_for_signing_here
ALLOWED_ORIGINS=https://dmitrycoinsec.github.io

# Database Configuration (if backend is added)
# DATABASE_URL=postgresql://user:password@host:port/dbname
# REDIS_URL=redis://localhost:6379

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_ENERGY_PURCHASES_PER_DAY=10

# Game Configuration
ENERGY_REFILL_HOURS=12
MAX_ENERGY_CAPACITY=100
WITHDRAWAL_MIN_AMOUNT=1000

# Development Mode
DEBUG=false
LOG_LEVEL=INFO
